---

interface Props {
    sectionTitle : string;
    backgroundColor: string;
}
const {sectionTitle, backgroundColor } = Astro.props
---
<div class="home-section">
    {sectionTitle && <h1>{sectionTitle}</h1>}
    <slot />
</div>

<style define:vars={{backgroundColor}}>
    .home-section{
        padding: 20px;
        background-color: var(--backgroundColor);
    }
    h1{
        font-size: 3rem;
        text-align: center;
        padding-top: 50px;
    }
    @media screen and (max-width: 500px) {
        .home-section{
            padding: 0;
            margin-top: 150px;
           
        }
    }
</style>