---
import {Image} from "astro:assets"
import TopSectionImage from "../images/DreamDecorSectionTop.jpg"
import BottomSectionImage from "../images/DreamDecorSectionBottom.jpg"
---
<div id="dd-section">
    <swiper-container slides-per-view="1" speed="500" loop="true" effect="cards" grab-cursor="true" navigation="true" autoplay-delay="3500" autoplay-disable-on-interaction="false">
        <swiper-slide>
            <h1>Your Dream</h1>
            <Image src={TopSectionImage} alt="Decor Image"/>
        </swiper-slide>
        <swiper-slide>
            <h1>Our Decor</h1>
            <Image src={BottomSectionImage} alt="Decor Image"/>
        </swiper-slide>
      </swiper-container>      
</div>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
<style>
    #dd-section{
        margin: 15px 0;
        background-position: center;
        --swiper-navigation-color: white;
  		--swiper-pagination-color: #e2c36c;
    }
    h1{
        font-size: 10rem;
        color: white;
        letter-spacing: -12px;
    }
   img{
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
    z-index: -1;
   }
   swiper-container{
    height: 75vh;
    width: 90%;
    
   }
   swiper-slide{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    @media screen and (max-width: 500px) {
        h1{
            font-size: 7rem;
            text-align: center;
        }
        swiper-container{
            height: 65vh;
        }
    }
</style>